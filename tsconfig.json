{
  "compilerOptions": {
    "target": "es2022",
    "strict": true,
    "lib": ["es2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "src/types/**/"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
